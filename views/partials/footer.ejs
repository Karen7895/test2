<!-- Floating AI Helper Button -->
<button class="ai-chat-button" id="ai-chat-button" aria-label="AI-Hilfe &ouml;ffnen">
  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
